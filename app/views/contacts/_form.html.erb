<div class= "contact_form">
  <div class= "inner_contact_form">
    <%= form_with(url: contacts_path, scope: :contact, local: true) do |form| %>
      <div class="field">
        <%= form.label :content,t(".content"), id: "content_label" %>
        <%= form.text_area :content, required: true ,class: "contact_field"%>
      </div>
      <div class="field">
        <%= form.label :email,t(".contact_email"),id: "email_label"  %>
        <%= form.email_field :email, required: true,class: "contact_field"%>
      </div>
      <div class="field_img">
        <%= form.label :image, t(".contact_img_file"), id: "img_file" %>
        <%= form.file_field :image ,id: "file_button"%>
      </div>
      <div class="actions">
        <%= form.submit %>
      </div>
    <% end %>
  </div>
</div>
