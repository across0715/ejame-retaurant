<%= form_with url: local: true) do |form| %>
  <section id="in_room">
    <h2>部屋にある物</h2>
    <div class="picture_set">
      <% @room_products.each do |product| %>
        <h3><%= product.name %></h3>
        <% if product.image? %>
          <p><%= image_tag product.image.url %></p>
        <% end %>
        <div class="field">
          <%= form.label :quantity %>
          <%= form.number_field :quantity, min: 0 ,max: 5, value: 0 ,required: true%>
        </div>
      <% end %><!-----   each --->
    </div>
  </section>
  <section id="in_bath">
    <h2>風呂場にある物</h2>
    <div class="picture_set">
      <% @bath_products.each do |product| %>
        <% if product.image? %>
          <p><%= image_tag product.image.url %></p>
        <% end %>
        <div class="field">
          <%= form.label :quantity %>
          <%= form.number_field :quantity, min: 0 ,max: 5, value: 0, required: true%>
        </div>
        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
    </div>
  <% end %><!--- form with -->
</section>
