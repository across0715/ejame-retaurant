<section id="in_room">
  <h2>部屋にある物</h2>
  <div class="picture_set">
    <%= form_with(model: @product,local: true) do |form| %>
      <% @room_products.each do |product| %>
        <% if product.image? %>
          <p><%= image_tag product.image.url %></p>
        <% end %>
        <div class="field">
          <%= form.label :quantity %>
          <%= form.number_field :quantity, min: 1 ,required: true%>
        </div>
        <div class="actions">
          <%= form.submit %>
        </div>
      <% end %>
    <% end %>
  </div>
</section>
