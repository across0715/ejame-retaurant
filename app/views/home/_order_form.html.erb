<div class ="img_frame">
  <%= t(".#{product.name}") %>
  <% if product.image? %>
    <div class= "p_img"><%= image_tag product.image.url %></div>
  <% end %>
  <% if product.available == true %>
    <div><%= t(".available") %></div>
    <div class="field">
      <%= form.hidden_field "order[][product_id]", value: product.id %>
      <%= form.label :quantity, t(".quantity") %>
      <%= form.number_field :quantity, name: "order[][quantity]" ,min: 0 ,max: 5, value: 0 ,required: true %>
    </div>
  <% else %>
    <div><%= t(".out_of_stock") %></div>
  <% end %>
</div>
