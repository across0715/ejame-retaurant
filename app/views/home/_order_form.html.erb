<h3><%= product.name %></h3>
<% if product.image? %>
  <p><%= image_tag product.image.url %></p>
  <% product.available %>
  <% if product.available == true %>
    <%= "利用可能" %>
  <% else %>
    <%=  "在庫切れ" %>
  <% end %>
<% end %>
<div class="field">
  <%= form.hidden_field "order[][product_id]", value: product.id %>
  <%= form.label :quantity %>
  <%= form.number_field :quantity, name: "order[][quantity]" ,min: 0 ,max: 5, value: 0 ,required: true %>
</div>
